<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".FindUserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include
            android:id="@+id/find_user_toolbar"
            layout="@layout/app_bar_layout"></include>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/simple_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="Search the users to add to the event"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/particips_listview_findUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_design"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_box"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Search Here"
            android:background="@drawable/input_design"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@color/white"
            android:padding="20dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:ellipsize="start"
            android:textColorHint="@color/white" />
        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_design"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"
            android:background="@drawable/list_item_drawable"
            android:layout_marginTop="15dp"></ListView>
    </LinearLayout>

</LinearLayout>